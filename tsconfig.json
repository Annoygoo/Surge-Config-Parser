{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",

    "declaration": true,
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
